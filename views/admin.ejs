<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Section</title>
    <!-- Import Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <!-- //Import Bootstrap -->

    <!-- import Fontawesome icon -->
    <script src="https://kit.fontawesome.com/777c5149ce.js" crossorigin="anonymous"></script>
    <!-- //import Fontawesome icon -->

    <style>
      tr {
        vertical-align: middle;
      }
    </style>
  </head>
  <body class="bg-dark text-white">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary py-2">
      <div class="container">
        <a class="navbar-brand fs-3 fw-bold" href="#"><i class="fa-solid fa-scissors me-1"></i>Snipify</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <!-- Add other navbar items here if needed -->
          </ul>
          <form class="d-flex">
            <a href="/" class="btn btn-outline-light me-2">User Section</a>
          </form>
        </div>
      </div>
    </nav>

    <div class="container-fluid">
      <h1 class="text-center my-4 fw-bolder">Admin Section</h1>
      <table class="table table-striped table-primary table-hover">
        <thead>
          <tr>
            <th class="fs-5">Full URL</th>
            <th class="fs-5">Short URL</th>
            <th class="fs-5">Clicks</th>
            <th class="fs-5">Action</th>
            <!-- Add Action column for buttons -->
          </tr>
        </thead>
        <tbody>
          <% shortUrls.forEach(shortUrl => { %>
          <tr>
            <td class="fs-5"><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
            <td class="fs-5"><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
            <td class="fs-5"><%= shortUrl.clicks %></td>
            <td>
              <!-- Add buttons for CRUD operations -->
              <button class="btn btn-primary btn-sm px-3 py-2 rounded border" onclick="update('<%= shortUrl._id %>')">Update</button>
              <!-- Add form for delete button -->
              <form action="/admin/delete/<%= shortUrl._id %>" method="POST">
                <button type="submit" class="btn btn-danger btn-sm px-3 py-2 border border-1 rounded m-auto">Delete</button>
              </form>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <form action="/admin/reset" method="POST">
        <div class="d-flex justify-content-end">
          <!-- Add a Reset button -->
          <button type="submit" class="btn btn-warning btn-lg rounded-pill px-5 py-2 my-4 me-5">Reset</button>
        </div>
      </form>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <!-- Scripts go here -->
    <script>
      // Refresh the page every 5 seconds
      setInterval(function () {
        window.location.reload();
      }, 5000); // Refresh every 5 seconds (5000 milliseconds)
    </script>
  </body>
</html>
